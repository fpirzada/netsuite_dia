<div class="sc-compare-item-wrapper" data-itemid="{{internalid}}">
  <div class="sc-compare-item">
    <div class="sc-addedfromcomparison-product-thumbnail-container">
      <img class="sc-addedfromcomparison-product-thumbnail" src="{{resizeImage thumbnail.url 'thumbnail'}}"
        alt="{{thumbnail.altimagetext}}" data-itemid="{{internalid}}">
    </div>
    <div class="sc-addedfromcomparison-product-name-container">
      <p class="sc-addedfromcomparison-product-name" data-itemid="{{internalid}}">{{name}}</p>
    </div>
    <div class="sc-addedfromcomparison-remove-button-container">
      <button type="button" class="sc-addedfromcomparison-remove-button"
          data-action="remove-from-add-to-compare" data-itemid="{{internalid}}">
        <i class="sc-addedfromcomparison-remove-button-icon" data-itemid="{{internalid}}"/>
      </button>
    </div>
    <div class="clear"></div>
  </div>
</div>
